<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#dfa01e"
    tools:context="com.example.petergabor.bakingapp.recipe_detail.DetailStepActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="270dp">

        <com.google.android.exoplayer2.ui.SimpleExoPlayerView
            android:id="@+id/playerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </FrameLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#421208" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="190dp">

        <TextView
            android:id="@+id/step_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:text="when you set the bowl of your stand mixer in it, the bowl does not touch the bottom of the pot." />

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#421208" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageButton1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:onClick="onPreviousClick"
            android:scaleType="fitXY"
            android:src="@drawable/ic_keyboard_arrow_left_black_24dp" />

        <ImageView
            android:id="@+id/imageButton2"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:onClick="onNextClick"
            android:rotation="180" />
    </RelativeLayout>


</LinearLayout>
